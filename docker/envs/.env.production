# =============================================================================
# Production Environment Variables
# =============================================================================
# WARNING: Never commit this file with real credentials to version control!
# Use environment variables or a secrets manager instead.
# =============================================================================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Service Mode
USE_REAL_SERVICES=true

# PostgreSQL Configuration (use external database or Cloud SQL)
DB_USER=${PROD_DB_USER}
DB_PASS=${PROD_DB_PASS}
DB_NAME=${PROD_DB_NAME}
DATABASE_URL=postgresql://${PROD_DB_USER}:${PROD_DB_PASS}@${PROD_DB_HOST}:${PROD_DB_PORT:-5432}/${PROD_DB_NAME}

# Redis Configuration (use managed Redis service)
REDIS_HOST=${PROD_REDIS_HOST}
REDIS_PORT=${PROD_REDIS_PORT:-6379}
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}

# S3 Configuration (use AWS S3, Cloud Storage, or other S3-compatible service)
S3_ENDPOINT=${PROD_S3_ENDPOINT}
S3_BUCKET=${PROD_S3_BUCKET}
S3_PUBLIC_ENDPOINT=${PROD_CDN_URL}
MINIO_ROOT_USER=${PROD_MINIO_ROOT_USER}
MINIO_ROOT_PASSWORD=${PROD_MINIO_ROOT_PASSWORD}

# AWS Credentials
AWS_ACCESS_KEY_ID=${PROD_AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${PROD_AWS_SECRET_ACCESS_KEY}
AWS_REGION=${PROD_AWS_REGION}

# Storage Base URL
STORAGE_BASE_URL=s3://${PROD_S3_BUCKET}

# Frontend Configuration
VITE_API_URL=${PROD_API_URL}
VITE_S3_ENDPOINT=${PROD_CDN_URL}

# JWT Secret (critical for security!)
JWT_SECRET=${PROD_JWT_SECRET}

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=${PROD_CORS_ORIGINS}

# Rate Limiting
RATE_LIMIT_MAX=${PROD_RATE_LIMIT_MAX:-100}
RATE_LIMIT_WINDOW=${PROD_RATE_LIMIT_WINDOW:-60000}
