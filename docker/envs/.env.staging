# =============================================================================
# Staging Environment Variables
# =============================================================================
# Use this file for staging/pre-production environments.
# Copy this file to .env.staging in the project root and modify as needed.
# =============================================================================

# Server Configuration
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0

# Service Mode
USE_REAL_SERVICES=true

# PostgreSQL Configuration
DB_USER=${STAGING_DB_USER}
DB_PASS=${STAGING_DB_PASS}
DB_NAME=${STAGING_DB_NAME}
DATABASE_URL=postgresql://${STAGING_DB_USER}:${STAGING_DB_PASS}@postgres:5432/${STAGING_DB_NAME}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}

# MinIO/S3 Configuration
S3_ENDPOINT=http://minio:9000
S3_BUCKET=${STAGING_S3_BUCKET}
S3_PUBLIC_ENDPOINT=${STAGING_S3_PUBLIC_ENDPOINT}
MINIO_ROOT_USER=${STAGING_MINIO_ROOT_USER}
MINIO_ROOT_PASSWORD=${STAGING_MINIO_ROOT_PASSWORD}

# AWS Credentials
AWS_ACCESS_KEY_ID=${STAGING_AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${STAGING_AWS_SECRET_ACCESS_KEY}
AWS_REGION=${STAGING_AWS_REGION:-us-east-1}

# Storage Base URL
STORAGE_BASE_URL=s3://${STAGING_S3_BUCKET}

# Frontend Configuration
VITE_API_URL=${STAGING_API_URL}
VITE_S3_ENDPOINT=${STAGING_S3_PUBLIC_ENDPOINT}

# JWT Secret (generate a secure random string)
JWT_SECRET=${STAGING_JWT_SECRET}
