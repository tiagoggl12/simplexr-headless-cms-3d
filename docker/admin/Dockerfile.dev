# =============================================================================
# Admin Frontend Dockerfile - Development mode with hot reload
# =============================================================================

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY admin/package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY admin ./admin/

# Install vite globally
RUN npm install -g vite

# Expose port
EXPOSE 5173

# Environment configuration
ENV VITE_API_URL=http://localhost:3000

# Start vite dev server
CMD ["npm", "run", "dev", "--prefix", "admin"]
