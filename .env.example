# Server Configuration
PORT=3000
HOST=0.0.0.0

# Service Mode
# Set to 'true' to use real S3/Redis services, 'false' to use in-memory stubs
USE_REAL_SERVICES=false

# S3 / MinIO Configuration
# Endpoint for S3 API (e.g., http://localhost:9000 for MinIO)
S3_ENDPOINT=http://localhost:9000

# S3 bucket name for storing assets
S3_BUCKET=dam-assets

# Public endpoint for accessing files (may differ from S3_ENDPOINT if using CDN)
S3_PUBLIC_ENDPOINT=http://localhost:9000

# AWS Credentials (required for S3-compatible services like MinIO)
AWS_ACCESS_KEY_ID=minio
AWS_SECRET_ACCESS_KEY=minio123
AWS_REGION=us-east-1

# Storage Base URL (fallback for stubbed storage service)
STORAGE_BASE_URL=s3://bucket

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# PostgreSQL Configuration (for future use)
DATABASE_URL=postgresql://dam:dam@localhost:5432/dam
